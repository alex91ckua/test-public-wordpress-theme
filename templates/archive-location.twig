{% extends "index.twig" %}

{% block content %}
    <section class="text_section_v2 pb-0">
        <div class="container text-center">
            <div class="text_section_v2__wrapper">
                <h4 class="text_section_v2__title">
                    Our Exclusive Locations
                </h4>
                <h5 class="text_section_v2__subtitle">
                    Choose a nursery in your area so your child can enjoy an exceptional early education without taking
                    a long commute.
                    <br>
                    <br>
                    Our nurseries are all impeccably fitted out with fun & child-friendly play areas, classrooms, and
                    eating areas. They also all have easy access, abundant parking, and are located in trendy UAE
                    neighborhoods.
            </div>
        </div>
    </section>

    {% for category in loc_categories %}
        <section class="location_list" id="{{category.slug}}">
            <div class="container">
                <div class="location_list__heading">
                    <h5 class="location_list__title">Nursery in {{ category.name }}</h5>
                </div>

                <div class="row">
                    {% for post in category.posts %}
                        <div class="col-md-3 mb-5 pb-4 location_list__item">
                            <div class="location_list__item_img">
                                <img src="{{ post.thumbnail.src }}">
                            </div>
                            <h6 class="location_list__item_title">{{ post.title }}</h6>
                            <div class="w-100 mt-3">
                                <a href="{{ post.link }}" class="button button--secondary">Learn more</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endfor %}

{% endblock %}
