</div>

<script>
  document.addEventListener('DOMContentLoaded', function(){
    let upsellPopupEl = document.getElementsByClassName('upsell-popup')[0];
    let upsellPopupCloseEl = document.getElementsByClassName('upsell-close')[0];

    upsellPopupCloseEl.addEventListener( "click" , (e) => {
      e.preventDefault();
      upsellPopupEl.style.display = 'none';
      sessionStorage.setItem('upsellPopupShowed', '1');
    });

    setTimeout(() => {
      if (sessionStorage.getItem('upsellPopupShowed') !== '1') {
        upsellPopupEl.style.display = 'block';
      }
    }, 500);
  });
</script>